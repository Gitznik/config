alias dbt-activate="source ~/kg_games/envs/dbt/bin/activate"
alias databricks-activate="source ~/kg_games/envs/databricks/bin/activate"
alias montecarlo-activate="source ~/kg_games/envs/monte_carlo/bin/activate"

# dbt aliases
alias dbtr='dbt run -s'
alias dbtrf='dbt run --full-refresh -s'
alias dbtt='dbt test -s'
alias dbt_docs='dbt docs generate && dbt docs serve'

# poetry aliases
alias pa="source $(poetry env info --path)/bin/activate"

# git aliases
alias gp='git push'
alias gpu='git push -u origin HEAD'
alias feature_branch='git checkout staging && git pull && git checkout -b'
alias hotfix_branch='git checkout master && git pull && git checkout -b'
alias master="git checkout master && git pull"
alias staging="git checkout staging && git pull"

# command line aliases
alias la='ls -a'
alias vim='nvim'
